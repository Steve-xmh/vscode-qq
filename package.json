{
	"name": "vscode-qq",
	"displayName": "QQ",
	"description": "lite qq for chat in working",
	"version": "1.2.2",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "VSCode QQ",
			"properties": {
				"vscode-qq.QQ.showAvatarOnTab": {
					"type": "boolean",
					"default": true,
					"description": "是否使用用户/群组头像作为每个会话窗口的图标"
				},
				"vscode-qq.theme.autoReload": {
					"type": "boolean",
					"default": false,
					"description": "在主题发生变更时自动重载已有会话的主题（会重新加载每个会话）"
				},
				"vscode-qq.theme.theme": {
					"type": "string",
					"default": "default",
					"enum": ["default", "console", "vscode"],
					"enumDescriptions": [
						"默认的 UI 主题",
						"控制台风格的 UI 主题",
						"基于 VSCode 布局和配色优化的主题"
					],
					"description": "修改聊天页面的主题"
				},
				"vscode-qq.theme.themeCSS": {
					"type": "string",
					"default": "",
					"description": "嵌入自定义的 CSS 样式来修改主题，可以使用链接或文件路径指向一个样式文件，需要和 Theme JS 一同设置方可生效"
				},
				"vscode-qq.theme.themeJS": {
					"type": "string",
					"default": "",
					"description": "嵌入自定义的 JS 脚本来修改主题，可以使用链接或文件路径指向一个脚本文件，需要和 Theme CSS 一同设置方可生效"
				}
			}
		},
		"commands": [
			{
				"command": "oicq.contact.pin",
				"title": "固定"
			},
			{
				"command": "oicq.contact.unpin",
				"title": "取消固定"
			},
			{
				"command": "oicq.contact.profile",
				"title": "查看资料"
			},
			{
				"command": "oicq.tooltip.copy",
				"title": "拷贝标签"
			},
			{
				"command": "oicq.friend.delete",
				"title": "删除好友"
			},
			{
				"command": "oicq.group.delete",
				"title": "退群"
			},
			{
				"command": "oicq.group.invite",
				"title": "邀请好友入群"
			},
			{
				"command": "oicq.statusBar.click",
				"title": "Login",
				"category": "QQ Explorer"
			},
			{
				"command": "oicq.friend.search",
				"title": "搜索好友",
				"category": "QQ Explorer"
			},
			{
				"command": "oicq.group.search",
				"title": "搜索群",
				"category": "QQ Explorer"
			},
			{
				"command": "oicq.pinned.refresh",
				"icon": "$(refresh)",
				"title": "刷新"
			},
			{
				"command": "oicq.friends.refresh",
				"icon": "$(refresh)",
				"title": "刷新"
			},
			{
				"command": "oicq.groups.refresh",
				"icon": "$(refresh)",
				"title": "刷新"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "qq-explorer",
					"title": "QQ Explorer",
					"icon": "ico.ico"
				}
			]
		},
		"views": {
			"qq-explorer": [
				{
					"id": "chat-pinned",
					"name": "固定"
				},
				{
					"id": "chat-friends",
					"name": "好友列表"
				},
				{
					"id": "chat-groups",
					"name": "群列表"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "oicq.contact.pin",
					"when": "view == chat-friends || view == chat-groups"
				},
				{
					"command": "oicq.contact.unpin",
					"when": "view == chat-pinned"
				},
				{
					"command": "oicq.contact.profile",
					"when": "view == chat-friends || view == chat-groups || view == chat-pinned"
				},
				{
					"command": "oicq.tooltip.copy",
					"when": "view == chat-friends || view == chat-groups || view == chat-pinned"
				},
				{
					"command": "oicq.friend.delete",
					"when": "view == chat-friends"
				},
				{
					"command": "oicq.group.invite",
					"when": "view == chat-friends || view == chat-groups || view == chat-pinned"
				},
				{
					"command": "oicq.group.delete",
					"when": "view == chat-groups"
				}
			],
			"view/title": [
				{
					"command": "oicq.pinned.refresh",
					"group": "navigation",
					"when": "view == chat-pinned"
				},
				{
					"command": "oicq.friends.refresh",
					"group": "navigation",
					"when": "view == chat-friends"
				},
				{
					"command": "oicq.groups.refresh",
					"group": "navigation",
					"when": "view == chat-groups"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.20.7",
		"@types/vscode": "^1.53.0",
		"@types/ws": "^7.4.1",
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.21.0",
		"eslint": "^7.23.0",
		"glob": "^7.1.6",
		"mocha": "^8.3.2",
		"typescript": "^4.2.4",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"get-port": "^5.1.1",
		"oicq": "^1.16.1",
		"ws": "^7.4.5"
	},
	"publisher": "takayama",
	"license": "Apache-2.0",
	"keywords": [
		"qq",
		"oicq"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/takayama-lily/vscode-qq"
	},
	"icon": "ico.ico"
}
